{
  "name": "hexo-theme-oncletom",
  "version": "1.10.1",
  "description": "Hexo theme for my portfolio and stuff.",
  "main": "index.js",
  "scripts": {
    "build": "browserify source/assets/js/slides.js -o source/assets/js/slides.bundle.js",
    "copy:vendor": "cp -rf node_modules/reveal.js/plugin/notes source/vendor && git add source/vendor/notes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "watchify source/assets/js/slides.js -dv -o source/assets/js/slides.bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oncletom/hexo-theme.git"
  },
  "keywords": [
    "hexo"
  ],
  "author": "Thomas Parisot (https://oncletom.io)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/oncletom/hexo-theme/issues"
  },
  "homepage": "https://github.com/oncletom/hexo-theme#readme",
  "dependencies": {
    "bootstrap": "~4.0.0",
    "highlight.js": "^9.12.0",
    "reading-time": "^1.1.0",
    "reveal-random-colors": "^1.0.1",
    "reveal.js": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "watchify": "^3.11.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  }
}
