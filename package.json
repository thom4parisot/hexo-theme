{
  "name": "hexo-theme-oncletom",
  "version": "2.12.0",
  "private": true,
  "description": "Hexo theme for my portfolio and stuff.",
  "main": "index.js",
  "scripts": {
    "build": "run-p 'build:*'",
    "build:js": "rollup --config",
    "build:css": "postcss source/css/*.css source/css/slides/*.css --config postcss.config.js --base source/css --dir source/styles",
    "copy:vendor": "cp -rf node_modules/reveal.js/plugin/notes source/vendor && git add source/vendor/notes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "run-p 'watch:*'",
    "watch:js": "npm run build:js -- --watch",
    "watch:css": "npm run build:css -- --watch --verbose --map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oncletom/hexo-theme.git"
  },
  "keywords": [
    "hexo"
  ],
  "author": "Thomas Parisot (https://oncletom.io)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/oncletom/hexo-theme/issues"
  },
  "homepage": "https://github.com/oncletom/hexo-theme#readme",
  "dependencies": {
    "clsx": "^1.0.4",
    "group-array": "^1.0.0",
    "highlight.js": "^9.16.2",
    "markdown-it": "^9.1.0",
    "markdown-it-attrs": "^3.0.1",
    "normalize.css": "^8.0.0",
    "reading-time": "^1.2.0",
    "reveal-random-colors": "^2.0.0",
    "reveal.js": "^3.8.0",
    "somebody": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "ejs": "^2.7.2",
    "npm-run-all": "^4.1.3",
    "postcss": "^7.0.21",
    "postcss-cli": "^6.1.3",
    "postcss-color-function": "^4.1.0",
    "postcss-extend-rule": "^3.0.0",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-nesting": "^7.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-url": "^8.0.0",
    "rollup": "^1.27.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-browserify-transform": "^1.0.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0"
  }
}
